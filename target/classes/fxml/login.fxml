<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.artgallery.controller.LoginController" styleClass="auth-root" prefWidth="800" prefHeight="600">
    <stylesheets>
        <URL value="@../style.css" />
    </stylesheets>
    <children>
        <VBox alignment="CENTER" spacing="20.0" maxWidth="400" maxHeight="450" styleClass="auth-box">
            <children>
                <Label text="Galerie d'Art - Connexion" styleClass="header-label"/>
                <Label fx:id="errorLabel" text="" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;"/>
                
                <VBox maxWidth="300" spacing="10">
                    <TextField fx:id="usernameField" promptText="Nom d'utilisateur" />
                    <PasswordField fx:id="passwordField" promptText="Mot de passe" />
                </VBox>
                
                <Button text="Se connecter" onAction="#handleLogin" maxWidth="300" styleClass="btn-primary"/>
                <Button text="CrÃ©er un compte" onAction="#goToRegister" maxWidth="300" style="-fx-background-color: transparent; -fx-text-fill: #3498db; -fx-underline: true; -fx-font-weight: bold;"/>
            </children>
        </VBox>
    </children>
</StackPane>
