<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.artgallery.controller.AdminController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Tableau de Bord Administrateur">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Button layoutX="716.0" layoutY="19.0" mnemonicParsing="false" onAction="#handleLogout" text="Déconnexion" AnchorPane.rightAnchor="14.0" />
      <TabPane layoutX="14.0" layoutY="60.0" prefHeight="526.0" prefWidth="772.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="60.0">
        <tabs>
          <Tab text="Gestion Commandes">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="orderTable" layoutX="14.0" layoutY="14.0" prefHeight="469.0" prefWidth="744.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
                          <columns>
                            <TableColumn fx:id="orderIdColumn" prefWidth="50.0" text="ID" />
                            <TableColumn fx:id="orderDateColumn" prefWidth="120.0" text="Date" />
                            <TableColumn fx:id="orderUserColumn" prefWidth="100.0" text="Utilisateur" />
                            <TableColumn fx:id="orderArtworksColumn" prefWidth="200.0" text="Oeuvres" />
                            <TableColumn fx:id="orderTotalColumn" prefWidth="80.0" text="Total (€)" />
                            <TableColumn fx:id="orderStatusColumn" prefWidth="80.0" text="Statut" />
                          </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Gestion Artistes">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <HBox layoutX="14.0" layoutY="14.0" spacing="20.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
                           <children>
                              <VBox prefHeight="469.0" prefWidth="250.0" spacing="10.0">
                                 <children>
                                    <Label text="Nom de l'artiste" />
                                    <TextField fx:id="artistNameField" />
                                    <Label text="Biographie" />
                                    <TextArea fx:id="artistBioArea" prefHeight="200.0" prefWidth="200.0" wrapText="true" />
                                    <HBox spacing="10.0">
                                       <children>
                                          <Button mnemonicParsing="false" onAction="#addArtist" text="Ajouter" />
                                          <Button mnemonicParsing="false" onAction="#updateArtist" text="Modifier" />
                                       </children>
                                    </HBox>
                                    <HBox spacing="10.0">
                                       <children>
                                          <Button mnemonicParsing="false" onAction="#deleteArtist" text="Supprimer" />
                                          <Button mnemonicParsing="false" onAction="#clearArtistForm" text="Vider" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              <TableView fx:id="artistTable" prefHeight="469.0" prefWidth="500.0" HBox.hgrow="ALWAYS">
                                <columns>
                                  <TableColumn fx:id="artistIdColumn" prefWidth="50.0" text="ID" />
                                  <TableColumn fx:id="artistNameColumn" prefWidth="150.0" text="Nom" />
                                    <TableColumn fx:id="artistBioColumn" prefWidth="250.0" text="Biographie" />
                                </columns>
                              </TableView>
                           </children>
                        </HBox>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Gestion Oeuvres">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <HBox layoutX="14.0" layoutY="14.0" spacing="20.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
                           <children>
                              <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="469.0" prefWidth="300.0" style="-fx-background-color:transparent;">
                                 <content>
                                    <VBox spacing="10.0">
                                       <children>
                                          <Label text="Titre" />
                                          <TextField fx:id="artworkTitleField" />
                                          <Label text="Prix" />
                                          <TextField fx:id="artworkPriceField" />
                                          <Label text="Quantité" />
                                          <TextField fx:id="artworkQuantityField" />
                                          <Label text="Description" />
                                          <TextArea fx:id="artworkDescArea" prefHeight="80.0" prefWidth="200.0" wrapText="true" />
                                          <Label text="URL Image" />
                                          <TextField fx:id="artworkImageUrlField" />
                                          <Label text="Artiste" />
                                          <ComboBox fx:id="artworkArtistCombo" prefWidth="150.0" />
                                          <Label text="Catégorie" />
                                          <ComboBox fx:id="artworkCategoryCombo" prefWidth="150.0" />
                                          <CheckBox fx:id="artworkAvailableCheck" mnemonicParsing="false" selected="true" text="Disponible" />
                                          <HBox spacing="10.0">
                                             <children>
                                                <Button mnemonicParsing="false" onAction="#addArtwork" text="Ajouter" />
                                                <Button mnemonicParsing="false" onAction="#updateArtwork" text="Modifier" />
                                             </children>
                                          </HBox>
                                          <HBox spacing="10.0">
                                             <children>
                                                <Button mnemonicParsing="false" onAction="#deleteArtwork" text="Supprimer" />
                                                <Button mnemonicParsing="false" onAction="#clearArtworkForm" text="Vider" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </VBox>
                                 </content>
                              </ScrollPane>
                              <TableView fx:id="artworkTable" prefHeight="469.0" prefWidth="480.0" HBox.hgrow="ALWAYS">
                                <columns>
                                  <TableColumn fx:id="artworkIdColumn" prefWidth="40.0" text="ID" />
                                  <TableColumn fx:id="artworkTitleColumn" prefWidth="100.0" text="Titre" />
                                    <TableColumn fx:id="artworkPriceColumn" prefWidth="75.0" text="Prix" />
                                    <TableColumn fx:id="artworkQuantityColumn" prefWidth="50.0" text="Qte" />
                                    <TableColumn fx:id="artworkArtistColumn" prefWidth="100.0" text="Artiste" />
                                    <TableColumn fx:id="artworkCategoryColumn" prefWidth="100.0" text="Catégorie" />
                                </columns>
                              </TableView>
                           </children>
                        </HBox>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
